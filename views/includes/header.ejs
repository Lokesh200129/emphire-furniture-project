<body>

    <nav class="navbar">
        <p class="navbar-brand"> EMPIRE &nbsp; INDIA&nbsp; FURNITURES</p>
        <div class="hamburg">
            <a href="#" onclick="showList()"><i class="fa-solid fa-bars"></i></a>
        </div>
        <div id="barList">
            <ul class="navbar-links">
                <li><a class="links" href="/">Home</a></li>
                <li><a class="links" href="/about">About</a></li>
                <li><a class="links" href="#">Services</a></li>
                <li><a class="links" href="/contact">Contact</a></li>
                <li>
                    <% if (!currUser) {%>
                        <div class="admin-icon">
                            <a href="/login">Admin Login</a>
                        </div>
                    <% } %>
                </li> 
                <li>
                    <% if (currUser) {%>
